{
  "name": "importease",
  "version": "1.0.4",
  "description": "ImportEase - Guided GSTR-2B & GSTR-2A to purchase register helper for CAs",
  "main": "app/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "publish": "electron-builder --publish always",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "electron": "^39.2.3",
    "electron-builder": "^25.1.7"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "node-machine-id": "^1.1.12",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "mongoose": "^8.8.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.10",
    "pdfkit": "^0.17.2",
    "uuid": "^11.0.2",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.jeet115.importease",
    "productName": "ImportEase",
    "artifactName": "ImportEase-Setup-${version}.${ext}",
    "directories": {
      "output": "dist"
    },

    "files": [
  "app/**/*",
  "app/client/dist/**/*",
  "node_modules/**/*",
  "!app/backend/node_modules/**",
  "!app/client/node_modules/**",
  "!**/*.map"
],

    "asar": true,

    "asarUnpack": [
      "node_modules/**/*"
    ],

    "publish": [
      {
        "provider": "github",
        "owner": "Jeet-115",
        "repo": "ImportEase"
      }
    ],

    "win": {
      "target": "nsis",
      "icon": "../client/public/logo.png"
    },

    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
